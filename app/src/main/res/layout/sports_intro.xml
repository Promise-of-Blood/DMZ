<?xml version="1.0" encoding="UTF-8" ?>

<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sports_background"
    app:layoutDescription="@xml/sports_scene"
    tools:context=".ui.browse.category.SportsFragment"
    android:id="@+id/ml_sports_intro">

    <ImageView
        android:id="@+id/sports_letter_s"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/sports_letter_s"/>

    <ImageView
        android:id="@+id/sports_letter_p"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/sports_letter_p"
        android:elevation="-1dp"/>

    <ImageView
        android:id="@+id/sports_letter_o"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/sports_letter_o"/>

    <ImageView
        android:id="@+id/sports_letter_r"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/sports_letter_r"/>

    <ImageView
        android:id="@+id/sports_letter_t"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/sports_letter_t"/>

    <ImageView
        android:id="@+id/sports_letter_s2"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/sports_letter_s_2"/>

    <ImageView
        android:id="@+id/sports_water_splash"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.4"
        android:src="@drawable/sports_water"
        app:layout_constraintEnd_toEndOf="parent"
        android:rotation="200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationY="70dp"
        android:translationX="30dp" />


    <ImageView
        android:id="@+id/sports_soccer_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sports_soccer_ball"/>

    <ImageView
        android:id="@+id/sports_tennis_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sports_tennis_ball"/>

    <ImageView
        android:id="@+id/sports_bascket_ball"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.44"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/sports_bascket_ball" />

    <ImageView
        android:id="@+id/sports_bubble1"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".3"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/lifestyle_bubble"/>

    <ImageView
        android:id="@+id/sports_bubble2"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".2"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/lifestyle_bubble" />

    <ImageView
        android:id="@+id/sports_bubble3"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".25"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/lifestyle_bubble"/>






</androidx.constraintlayout.motion.widget.MotionLayout>