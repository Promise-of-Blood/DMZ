<?xml version="1.0" encoding="UTF-8" ?>

<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lifestyle_background"
    app:layoutDescription="@xml/lifestyle_scene"
    tools:context=".ui.browse.category.LifeStyleFragment">

    <ImageView
        android:id="@+id/lifestyle_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_flower"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/lifestyle_grass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.175"
        android:src="@drawable/lifestyle_grass"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/lifestyle_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_cloud"/>



    <!-- 글씨 -->
    <ImageView
        android:id="@+id/lifestyle_letter_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_l"/>

    <ImageView
        android:id="@+id/lifestyle_letter_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_i"/>

    <ImageView
        android:id="@+id/lifestyle_letter_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_f"/>

    <ImageView
        android:id="@+id/lifestyle_letter_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_e"/>

    <ImageView
        android:id="@+id/lifestyle_letter_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_s"/>

    <ImageView
        android:id="@+id/lifestyle_letter_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_t"/>

    <ImageView
        android:id="@+id/lifestyle_letter_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_y"/>

    <ImageView
        android:id="@+id/lifestyle_letter_l_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_l"/>

    <ImageView
        android:id="@+id/lifestyle_letter_e_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_letter_e"/>



    <ImageView
        android:id="@+id/lifestyle_3d_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_3d_flower"/>

    <ImageView
        android:id="@+id/lifestyle_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifestyle_bubble"/>







</androidx.constraintlayout.motion.widget.MotionLayout>