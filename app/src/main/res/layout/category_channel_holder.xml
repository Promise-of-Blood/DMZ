<?xml version="1.0" encoding="UTF-8" ?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:background="@color/black"
    android:background="@drawable/shape_corner_radius_10dp_border"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_channel_holder_thumbnail"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.11"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:background="@drawable/shape_circle"
        tools:src="@drawable/test"
        android:clipToOutline="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_channel_holder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/subtitle_p"
        android:textColor="@color/white"
        tools:text="PAKA"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_channel_holder_thumbnail"
        app:layout_constraintStart_toEndOf="@id/iv_channel_holder_thumbnail"
        app:layout_constraintBottom_toBottomOf="@id/iv_channel_holder_thumbnail"/>


    <View
        android:id="@+id/divider_vertical"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_channel_holder_thumbnail"/>

    <View
        android:id="@+id/divider_horizontal"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_vertical"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_channel_holder_subscribe_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="75.7만명"
        style="@style/subtitle_b_p"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/divider_horizontal"/>

    <TextView
        android:id="@+id/tv_channel_holder_subscribe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="채널 구독자 수"
        style="@style/body_p"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_channel_holder_subscribe_num"
        app:layout_constraintStart_toStartOf="@id/tv_channel_holder_subscribe_num"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_channel_holder_video_count_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="885개"
        style="@style/subtitle_b_p"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/tv_channel_holder_subscribe_num"
        app:layout_constraintStart_toEndOf="@id/divider_horizontal"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_channel_holder_video_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="동영상"
        style="@style/body_p"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_channel_holder_video_count_num"
        app:layout_constraintStart_toStartOf="@id/tv_channel_holder_video_count_num"
        app:layout_constraintEnd_toEndOf="@id/tv_channel_holder_video_count_num"/>













</androidx.constraintlayout.widget.ConstraintLayout>