<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="32dp"
    android:paddingTop="40dp"
    android:paddingBottom="12dp"
    tools:background="@color/black">

    <TextView
        android:id="@+id/tv_header_title"
        style="@style/subtitle_b_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Card collection"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_header_more"
        style="@style/description_p"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/my_page_more"
        android:textColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@id/tv_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_header_title" />

</androidx.constraintlayout.widget.ConstraintLayout>