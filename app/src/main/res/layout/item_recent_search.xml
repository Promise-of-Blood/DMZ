<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="search"
            type="com.example.dmz.model.Search" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:backgroundTint="@color/flou_yellow"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/elicedigitalbaeum_bold"
                android:text="HISTORY CARD"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="검색어"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum_bold"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{search.color}"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum"
                android:layout_marginTop="120dp"
                android:layout_marginHorizontal="60dp"
                tools:text="검색어"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="국가 설정"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum_bold"
                android:layout_marginTop="150dp"
                android:layout_marginHorizontal="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{search.region}"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum"
                android:layout_marginTop="180dp"
                android:layout_marginHorizontal="60dp"
                tools:text="대한민국"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정렬 설정"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum_bold"
                android:layout_marginTop="210dp"
                android:layout_marginHorizontal="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{search.sort}"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum"
                android:layout_marginTop="240dp"
                android:layout_marginHorizontal="60dp"
                tools:text="정렬"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum_bold"
                android:layout_marginTop="270dp"
                android:layout_marginHorizontal="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{search.date}"
                android:textSize="12sp"
                android:fontFamily="@font/elicedigitalbaeum"
                android:layout_marginTop="300dp"
                android:layout_marginHorizontal="60dp"
                tools:text="2024.07.11 ~ 2024.08.12"
                />




        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


