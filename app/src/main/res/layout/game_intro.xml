<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:layoutDescription="@xml/game_scene"
    tools:context=".ui.browse.category.GameFragment">



    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/game_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/tv_game_bg_text_lol"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/game_text_lol"
        app:layout_constraintDimensionRatio="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_lost_ark"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/game_text_lost_ark"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintStart_toStartOf="@id/tv_game_bg_text_lol"
        app:layout_constraintTop_toBottomOf="@id/tv_game_bg_text_lol"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_tft"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/game_text_tft"
        app:layout_constraintDimensionRatio="1.5"
        app:layout_constraintStart_toStartOf="@id/tv_game_bg_text_lol"
        app:layout_constraintTop_toBottomOf="@id/tv_game_bg_text_lost_ark"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_maple"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/game_text_maple"
        app:layout_constraintDimensionRatio="5.5"
        app:layout_constraintStart_toStartOf="@id/tv_game_bg_text_lol"
        app:layout_constraintTop_toBottomOf="@id/tv_game_bg_text_tft"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_googoo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/game_text_googoo"
        app:layout_constraintDimensionRatio="8"
        app:layout_constraintStart_toStartOf="@id/tv_game_bg_text_lol"
        app:layout_constraintTop_toBottomOf="@id/tv_game_bg_text_maple"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_action"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/game_text_action"
        app:layout_constraintBottom_toTopOf="@id/tv_game_bg_text_role"
        app:layout_constraintDimensionRatio="3"
        app:layout_constraintEnd_toEndOf="@id/tv_game_bg_text_casual"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_role"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/game_text_role"
        app:layout_constraintBottom_toTopOf="@id/tv_game_bg_text_adventure"
        app:layout_constraintDimensionRatio="5.5"
        app:layout_constraintEnd_toEndOf="@id/tv_game_bg_text_casual"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_adventure"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/game_text_adventure"
        app:layout_constraintBottom_toTopOf="@id/tv_game_bg_text_casual"
        app:layout_constraintDimensionRatio="5"
        app:layout_constraintEnd_toEndOf="@id/tv_game_bg_text_casual"
        app:layout_constraintWidth_percent="0.75" />

    <ImageView
        android:id="@+id/tv_game_bg_text_casual"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/game_text_casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75" />


    <ImageView
        android:id="@+id/iv_game_letter_g"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/game_letter_g"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/iv_game_letter_a"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/game_letter_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".4"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/iv_game_letter_m"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/game_letter_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".6"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/iv_game_letter_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/game_letter_e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".6"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/iv_ic_down"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.motion.widget.MotionLayout>