<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    tools:background="@color/black">

    <ImageView
        android:id="@+id/iv_card_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_corner_radius_24dp"
        android:clipToOutline="true"
        android:contentDescription="@string/common_keyword_thumbnail"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_keyword"
        style="@style/subtitle_b_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/iv_card_image"
        app:layout_constraintStart_toStartOf="@id/iv_card_image"
        app:layout_constraintTop_toBottomOf="@id/iv_card_image"
        tools:text="요아정" />

</androidx.constraintlayout.widget.ConstraintLayout>