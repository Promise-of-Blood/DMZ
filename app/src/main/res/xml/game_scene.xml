<?xml version="1.0" encoding="utf-8"?>

<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">



    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@id/iv_background"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.9"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent="0.95"
            android:scaleType="fitXY"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:rotationX="-0.5"
            />


        <Constraint
            android:id="@id/iv_game_letter_g"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.5"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.4"
            motion:layout_constraintHorizontal_bias="0.2"
            android:rotation="0"
            />

        <Constraint
            android:id="@id/iv_game_letter_a"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.45"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"

            motion:layout_constraintVertical_bias="0.4"
            motion:layout_constraintHorizontal_bias="0.9"/>

<!--            android:rotation="-10"-->
<!--            android:rotationX="0"-->


        <Constraint
            android:id="@id/iv_game_letter_m"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.5"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"

            motion:layout_constraintVertical_bias="0.6"
            motion:layout_constraintHorizontal_bias="0.2"

            android:rotation="0"
            android:rotationX="0"/>

        <Constraint
            android:id="@id/iv_game_letter_e"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.55"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"

            motion:layout_constraintVertical_bias="0.6"
            motion:layout_constraintHorizontal_bias="0.9"

            android:rotation="0"
            android:rotationY="0"
            android:rotationX="-10"/>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@id/iv_background"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.93"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent="0.98"
            android:scaleType="fitXY"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:rotationX="0.5"
            />



        <Constraint
            android:id="@id/iv_game_letter_g"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.55"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.35"
            motion:layout_constraintHorizontal_bias="0"
            android:rotation="-20"/>

        <Constraint
            android:id="@id/iv_game_letter_a"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.56"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"

            motion:layout_constraintVertical_bias="0.36"
            motion:layout_constraintHorizontal_bias="1.5"/>
<!--            android:rotation="10"-->
<!--            android:rotationX="30"-->


        <Constraint
            android:id="@id/iv_game_letter_m"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.5"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"

            motion:layout_constraintVertical_bias="0.8"
            motion:layout_constraintHorizontal_bias="0.1"

            android:rotation="-20"
            android:rotationX="-20"/>

        <Constraint
            android:id="@id/iv_game_letter_e"
            android:layout_width="0dp"
            motion:layout_constraintWidth_percent="0.45"
            android:layout_height="0dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"

            motion:layout_constraintVertical_bias="0.7"
            motion:layout_constraintHorizontal_bias="1"

            android:rotation="0"
            android:rotationY="30"
            android:rotationX="0"/>

    </ConstraintSet>

    <!-- 기본적인 Transition 설정 -->
    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/end"
        motion:duration="3000"
        motion:autoTransition="animateToEnd">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/iv_game_letter_a"
                motion:framePosition="50"
                android:rotation="10"
                android:rotationX="30"
                />

        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/iv_game_letter_a"
                motion:framePosition="80"
                android:rotation="-10"
                android:rotationX="10"
                />

        </KeyFrameSet>

    </Transition>

    <!-- 추가적으로 end에서 start로 다시 전환 설정 -->
    <Transition
        motion:constraintSetStart="@id/end"
        motion:constraintSetEnd="@id/start"
        motion:duration="3000"
        motion:autoTransition="animateToEnd">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/iv_game_letter_a"
                motion:framePosition="20"
                android:rotation="-10"
                android:rotationX="0"
                />

        </KeyFrameSet>



        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/iv_game_letter_a"
                motion:framePosition="50"
                android:rotation="10"
                android:rotationX="30"
                />

        </KeyFrameSet>


    </Transition>


</MotionScene>